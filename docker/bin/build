#!/usr/bin/env bash

# Build the local ":latest" version 
#
# Syntax: bin/build
# (run from a docker directory)

img_name=microclimates/`grep '^  "name"' package.json | sed 's/  "name": "\(.*\)",$/\1/'`
img_latest="$img_name:latest"

echo ""
echo "Building $img_latest"
echo ""
docker build -t "$img_latest" .

